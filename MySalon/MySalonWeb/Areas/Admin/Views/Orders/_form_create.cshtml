@using MySalonWeb.ViewModels
@model BookingViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="mb-3">
    <label asp-for="Client.Name"></label>
    <input asp-for="Client.Name" class="form-control" />
    <span asp-validation-for="Client.Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Client.Surname"></label>
    <input asp-for="Client.Surname" class="form-control" />
    <span asp-validation-for="Client.Surname" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Client.Email"></label>
    <input asp-for="Client.Email" class="form-control" />
    <span asp-validation-for="Client.Email" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Client.Phone"></label>
    <input asp-for="Client.Phone" class="form-control" />
    <span asp-validation-for="Client.Phone" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="label-form">Choose service type:</label>
    <select asp-for="ServiceType" asp-items="Html.GetEnumSelectList<ServiceTypes>()" class="form-control label-form" id="ServiceType"> </select>
</div>


<div id="ServiceName"> </div>
<div id="ServiceTime"> </div>