@using NonFactors.Mvc.Grid;
@model IQueryable<Client>
@{
    ViewBag.Title = "Clients";
}

<p>
    <a asp-action="Create" class="btn btn-sm btn-info">Create</a>
</p>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Id).Titled("Client Id");
        columns.Add(model => model.Surname).Titled("Surname");
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Phone).Titled("Phone");
        columns.Add(model => model.Email).Titled("Email");
        columns.Add(model => $"<a class=\"btn btn-sm btn-primary\" href=\"Orders\\Edit\\{model.Id}\">Edit</a>  " +
            $"<a class=\"btn btn-sm  btn-danger\" href=\"Orders\\Delete\\{model.Id}\">Delete</a>"
            ).Encoded(false);

    })
    .Using(GridFilterMode.Row)
    .Empty("")
    .Filterable()
    .Sortable()
    .Pageable()
) 
